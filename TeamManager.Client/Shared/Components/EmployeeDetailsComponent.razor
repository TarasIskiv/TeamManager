@if(Employee is null || Team is null)
{
    <MudStack Row="true" Style="width:100%;">
        <MudText Color="Color.Primary" Typo="Typo.h4">Loading...</MudText>
    </MudStack>
}
else
{
<MudPaper Height="100%" Width="100%" Style="padding:1em" Outlined="true" Elevation="2">
    <MudStack Row="true" Justify="Justify.Center" Style="width:100%">
        <MudText Typo="Typo.h5" Color="Color.Primary">Employee's info</MudText>
    </MudStack>
    <MudStack Style="width:100%; height:100%" Row="true">
        <MudPaper Width="25%" Height="100%" Outlined="false" Elevation="0" Style="background:#1976D2">
            <MudImage Src="@Employee.Photo" Alt="User Photo" Height="250" Style="width:100%"></MudImage>
        </MudPaper>
        <MudPaper Width="75%" Height="100%" Outlined="false" Elevation="0">
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Name:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@Employee.Name</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Surname:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@Employee.Surname</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Age:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@Employee.Age</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Activity period:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@GetActivityPeriod()</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Team:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@GetTeam()</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.SpaceBetween">
                <MudText Color="Color.Primary" Typo="Typo.h6">Role:</MudText>
                <MudText Color="Color.Secondary" Typo="Typo.h6">@Employee.Role</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.Center">
                <MudText Color="Color.Primary" Typo="Typo.h6">Responsibilities:</MudText>
            </MudStack>
            <MudStack Row="true" Style="100%" Justify="Justify.Center">
                <MudText Color="Color.Secondary" Typo="Typo.h6">@String.Join(", ", Employee.Responsibilities)</MudText>
            </MudStack>
        </MudPaper>
    </MudStack>
</MudPaper>
<br/>
<MudStack Row="true" Justify="Justify.FlexStart">
    <MudButton Variant="Variant.Outlined" Color="Color.Warning" OnClick="UpdateEmployee">Edit</MudButton>
    <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="DeleteEmployee">Remove</MudButton>
</MudStack>
}